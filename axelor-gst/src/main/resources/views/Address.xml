<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<form name="address-form" id="gst-address-form" title="Address"
		model="com.axelor.apps.base.db.Address"
		onSave="action-group-base-address-onsave,save,action-base-address-method-update-lat-long"
		onNew="default-address-record" width="large" extension="true">

		<extend target="//field[@name='addressL7Country']">
			<insert position="after">
				<field name="state" if="__config__.app.isApp('gst')" />
			</insert>
		</extend>

		<extend target="//static[@name='addressL6Text']">
			<insert position="after">
				<field name="state" if="__config__.app.isApp('gst')" />
				<field name="isInvoicingAddr" type="boolean"
					showIf="$popup() &amp;&amp; id == null" title="Invoicing address"
					if="__config__.app.isApp('gst')" />
				<field name="isDeliveryAddr" type="boolean"
					showIf="$popup() &amp;&amp; id == null" title="Delivery address"
					if="__config__.app.isApp('gst')" />
				<field name="isDefault" type="boolean"
					showIf="$popup() &amp;&amp; id == null" title="Default"
					if="__config__.app.isApp('gst')" />
			</insert>
		</extend>

	</form>


	<form name="address-partner-address-form"
		id="gst-address-partner-address-form" title="Address"
		model="com.axelor.apps.base.db.Address"
		onSave="action-group-base-address-onsave,save,action-base-address-method-create-partner-address,action-base-address-method-update-lat-long"
		onNew="default-address-record" width="large" extension="true">

		<extend target="//field[@name='addressL7Country']">
			<insert position="after">
				<field name="state" if="__config__.app.isApp('gst')" />
			</insert>
		</extend>
	</form>

</object-views>